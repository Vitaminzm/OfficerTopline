<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_one"
        android:layout_gravity="center"
        android:layout_width="@dimen/height_ttz"
        android:layout_marginLeft="10dip"
        android:layout_alignParentRight="true"
        android:layout_height="@dimen/height_ofe"
        android:layout_marginTop="@dimen/margin_tt"
        android:layout_marginBottom="@dimen/margin_tt"
        android:src="@mipmap/ic_launcher"/>
    <RelativeLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@id/image_one"
        android:layout_alignBottom="@id/image_one"
        android:layout_alignTop="@id/image_one"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_title"
            android:textColor="@color/fontblack"
            android:text="时隔100年，台湾终于要回归了！"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/font_size_rt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include  layout="@layout/item_footer" />
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
